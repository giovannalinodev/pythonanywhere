{
    "name": "Django Dev",
    "image": "mcr.microsoft.com/devcontainers/python:3.10",
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-python.vscode-pylance",
          "batisteo.django-snippets"
        ]
      }
    },
    "postCreateCommand": "pip install --no-cache-dir -r requirements.txt",
    "forwardPorts": [8000]
  }
  